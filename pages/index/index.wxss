/**index.wxss**/

page {
  height: 100%;
  background-color: #ededed;
}

.content {
  min-height: 100%;
}

.swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 90rpx;
  background: #fff;
}

.tab-item {
  width: 50%;
  text-align: center;
  color: #777;
  font-size: 28rpx;
}

.tab-item.active {
  color: black;
}

